use quirky_binder::{
    filter::{
        function::{
            emit::function_emit,
            terminate::function_terminate,
        },
        group::{group, sub_group},
        unwrap::sub_unwrap,
    },
};

{
  (
      function_emit(
        fields: [("value", "Option<String>")],
        body: r#"
            use fallible_iterator::IteratorExt;
            [
                Ok(None.into()),
                Ok(Some("some".to_string()).into()),
            ]
                .into_iter()
                .transpose_into_fallible()
"#,
      )
    - group(by_fields: [], group_field: "group")
    - sub_group(path_fields: ["group"], by_fields: [], group_field: "sub_group")
    - sub_unwrap(path_fields: ["group", "sub_group"], fields: ["value"], skip_nones: true)
    - function_terminate(
        body: r#"
            let record = input.next()?.unwrap();
            assert_eq!(
                record
                    .group().first().unwrap()
                    .sub_group().first().unwrap()
                    .value().as_str(),
                "some"
            );
            assert!(input.next()?.is_none());
            Ok(())
"#,
      )
  )
}

{
  (
      function_emit(
        fields: [("value", "Option<String>")],
        body: r#"
            use fallible_iterator::IteratorExt;
            let record = Some("some".to_string()).into();
            Some(Ok(record)).into_iter().transpose_into_fallible()
"#,
      )
    - group(by_fields: [], group_field: "group")
    - sub_group(path_fields: ["group"], by_fields: [], group_field: "sub_group")
    - sub_unwrap(path_fields: ["group", "sub_group"], fields: ["value"], skip_nones: false)
    - function_terminate(
        body: r#"
            let record = input.next()?.unwrap();
            assert_eq!(
                record
                    .group().first().unwrap()
                    .sub_group().first().unwrap()
                    .value().as_str(),
                "some"
            );
            assert!(input.next()?.is_none());
            Ok(())
"#,
      )
  )
}
