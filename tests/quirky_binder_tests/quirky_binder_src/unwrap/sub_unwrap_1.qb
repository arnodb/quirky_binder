use quirky_binder::{
    filter::{
        function::{
            produce::function_produce,
            terminate::function_terminate,
        },
        group::group,
        unwrap::sub_unwrap,
    },
};

{
  (
      function_produce(
        fields: [("value", "Option<String>")],
        body: r#"
            let record = new_record(None);
            output.send(Some(record))?;
            let record = new_record(Some("some".to_string()));
            output.send(Some(record))?;
            output.send(None)?;
            Ok(())
"#,
      )
    - group(by_fields: [], group_field: "group")
    - sub_unwrap(path_fields: ["group"], fields: ["value"], skip_nones: true)
    - function_terminate(
        body: r#"
            let record = input.next()?.unwrap();
            assert_eq!(
                record
                    .group().first().unwrap()
                    .value().as_str(),
                "some"
            );
            assert!(input.next()?.is_none());
            Ok(())
"#,
      )
  )
}

