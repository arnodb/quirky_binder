use quirky_binder::{
    filter::{
        function::{
            emit::function_emit,
            terminate::function_terminate,
        },
        unwrap::unwrap,
    },
};

{
  (
      function_emit(
        fields: [("value", "Option<String>")],
        body: r#"
            use fallible_iterator::IteratorExt;
            [
                Ok(None.into()),
                Ok(Some("some".to_string()).into()),
            ]
                .into_iter()
                .transpose_into_fallible()
"#,
      )
    - unwrap(fields: ["value"], skip_nones: true)
    - function_terminate(
        body: r#"
            let record = input.next()?.unwrap();
            assert_eq!(record.value().as_str(), "some");
            assert!(input.next()?.is_none());
            Ok(())
"#,
      )
  )
}

{
  (
      function_emit(
        fields: [("value", "Option<String>")],
        body: r#"
            use fallible_iterator::IteratorExt;
            let record = Some("some".to_string()).into();
            Some(Ok(record)).into_iter().transpose_into_fallible()
"#,
      )
    - unwrap(fields: ["value"], skip_nones: false)
    - function_terminate(
        body: r#"
            let record = input.next()?.unwrap();
            assert_eq!(record.value().as_str(), "some");
            assert!(input.next()?.is_none());
            Ok(())
"#,
      )
  )
}
