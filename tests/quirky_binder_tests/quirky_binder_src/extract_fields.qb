use quirky_binder::{
    filter::{
        fork::extract_fields::extract_fields,
        function::{
            emit::function_emit,
            terminate::function_terminate,
        },
    },
};

{
  (
      function_emit(
        fields: [("value", "String")],
        body: r#"
            use fallible_iterator::IteratorExt;
            let record = "some value".to_string().into();
            Some(Ok(record)).into_iter().transpose_into_fallible()
"#,
      )
    - extract_fields(fields: ["value"]) [extracted]
    - function_terminate(
        body: r#"
            let record = input.next()?.unwrap();
            assert_eq!(record.value(), "some value", "main");
            assert!(input.next()?.is_none());
            Ok(())
"#,
      )
  )

  ( < extracted
    - function_terminate(
        body: r#"
            let record = input.next()?.unwrap();
            assert_eq!(record.value(), "some value", "extracted");
            assert!(input.next()?.is_none());
            Ok(())
"#,
      )
  )
}
