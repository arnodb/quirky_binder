use quirky_binder::{
    filter::{
        function::{
            emit::function_emit,
            terminate::function_terminate,
        },
        transform::string::to_lowercase,
    },
};

{
  (
      function_emit(
        fields: [("value", "Box<str>")],
        body: r#"
            use fallible_iterator::IteratorExt;
            let record = Box::<str>::from("BoîTe").into();
            Some(Ok(record)).into_iter().transpose_into_fallible()
"#,
      )
    - to_lowercase(fields: ["value"])
    - function_terminate(
        body: r#"
            let record = input.next()?.unwrap();
            assert_eq!(record.value().as_ref(), "boîte");
            assert!(input.next()?.is_none());
            Ok(())
"#,
      )
  )
}
